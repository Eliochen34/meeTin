
<div>{{roomId}}</div>
<div class="main">
  <div class="main__left">
    <div class="main__videos">
      <div id="video-grid"></div>
    </div>
    <div class="main__controller">
      <div class="main__controller__block">
        <div class="main__controller__button">
          <i class="fas fa-microphone"></i>
          <span>Mute</span>
        </div>
        <div class="main__controller__button">
          <i class="fas fa-video"></i>
          <span>Stop Video</span>
        </div>
      </div>
      <div class="main__controller__block">
        <div class="main__controller__button">
          <i class="fas fa-shield-alt"></i>
          <span>Security</span>
        </div>
        <div class="main__controller__button">
          <i class="fas fa-user-friends"></i>
          <span>Participants</span>
        </div>
        <div class="main__controller__button">
          <i class="fas fa-comment-alt"></i>
          <span>Chat</span>
        </div>
      </div>
      <div class="main__controller__block">
        <div class="main__controller__button">
          <span class="leave_meeting">Leaving Meeting</span>
        </div>
      </div>
    </div>
  </div>

  <div class="main__right">
    <div class="main__header">
      <h5>Chat</h5>
    </div>
    <div class="main__chat__window">
      <ul id="messages"></ul>
    </div>
    <form id="main__message__container">
      <input id="message-input" type="text" placeholder="Type some message here...">
      <button type="submit" class="btn btn-primary" id="send-button">Send</button>
    </form>
  </div>
</div>
<script src="script.js" defer></script>
